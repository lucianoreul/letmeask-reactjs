{
    "rules": {
        "rooms": {
            ".read": false,
            ".write": "auth != null",
            "$roomId": {
                ".read": true,
                ".write": "auth != null && (!data.exists() || data.child('ownerId').val() == auth.id)",
                "questions": {
                    ".read": true,
                    ".write": "auth != null && (!data.exists() || data.parent().child('ownerId').val() == auth.id)",
                    "likes": {
                        ".read": true,
                        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() == auth.id)"
                    }
                }
            }
        }
    }
}